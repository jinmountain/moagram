<% include ../partials/header %>
    <div class="container">
        <h2 style="text-align: center">Update <%= content.name %></h2>
        <div style="width: 60%; margin: 25px auto;">
            <form action="/contents/<%=content._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value="<%= content.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" value="<%= content.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="video" value="<%= content.video.url %>">
                </div>

                <div class="form-group">
                    <label for="ctg">Select Category</label>
                    <select class="form-control" id="ctg" name="category">
                        <optgroup label="Catergory of your video">
                            <option value="educational">Educational</option>
                            <option value="fitness">Fitness</option>
                            <option value="motivation">Motivation</option>
                            <option value="music">Music</option>
                            <option value="beauty">Beauty</option>
                            <option value="gaming">Gaming</option>
                            <option value="vlog">VLOG</option>
                            <option value="other">Others</option>
                        </optgroup>
                    </select>                   

                </div>
                                
                <div class="form-group">
                    <textarea id="editor" type="text" name="description" value="<%= content.description %>"></textarea>
                </div>

                <script>
                  CKEDITOR.replace( 'editor');
                </script>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update</button>
                </div>
            </form>
            <a href="/contents" class="btn btn-default btn-sm" id="btn-default">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>

