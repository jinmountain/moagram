<% include ../partials/header %>
    <div class="container">
        <h2 style="text-align: center">새로운 포스트 만들기</h1>
        <div class="inputForm">
            <form action="/ko/contents" method="POST">
                <label for="contentName">제목</label>
                <div id="contentName" class="form-group">
                    <input class="form-control" type="text" name="name" maxlength="50" placeholder="Title" required>
                </div>
                <label for="contentImage">이미지 URL</label>
                <div id="contentImage" class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                <label for="contentVideo">영상 URL <img id="nav-icons" width="25" height="23" src="/icons/youtube.png"><img id="nav-icons" width="25" height="23" src="/icons/icons8-twitch-48.png"></label>
                <div id="contentVideo" class="form-group">
                    <input class="form-control" type="text" name="video" placeholder="유튜브 또는 트위치 영상의 주소">
                </div>

                <div class="form-group">
                    <label for="ctg">이 글의 카테고리를 선택해주세요</label>
                    <select class="form-control" id="ctg" name="category">
                        <optgroup label="Catergory of your video">
                            <option value="tntl">웃긴영상// TNTL</option>
                            <option value="educational">교육</option>
                            <option value="fitness">운동</option>
                            <option value="motivational">동기부여</option>
                            <option value="music">음악</option>
                            <option value="beauty">뷰티// Beauty</option>
                            <option value="gaming">게임</option>
                            <option value="vlog">브이로그// VLOG</option>
                            <option value="animal">동물</option>
                            <option value="other">Others</option>
                        </optgroup>
                    </select>                    
                </div>
                <div class="form-group">
                    <textarea id="editor" type="text" name="description"></textarea>
                </div>

                <script>
                  CKEDITOR.replace( 'editor');
                </script>
                    
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <div class="text-right">
                <a class="btn btn-default btn-sm" id="btn-default" href="/ko/contents">뒤로가기</a>
            </div>
        </div>
    </div>
<% include ../partials/footer %>