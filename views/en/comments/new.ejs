<% include ../partials/header %>
    <div class="container">
        <h1 style="text-align: center">Add New Comment to <%= content.name %></h1>
        <div class="inputForm">
            <form action="/contents/<%= content._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="txt" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/contents/<%=content._id%>">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>
