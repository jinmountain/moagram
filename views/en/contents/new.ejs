                <div id="contentImage" class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                <label for="contentVideo"><strong>Video URL</strong> <img id="nav-icons" width="25" height="23" src="/icons/youtube.png"><img id="nav-icons" width="25" height="23" src="/icons/icons8-twitch-48.png"></label>
                <div id="contentVideo" class="form-group">
                    <input class="form-control" type="text" name="video" placeholder="YouTube or Twitch Video URL">
                </div>

