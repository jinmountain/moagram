<% include ../partials/header %>
    <div class="container">
        <h2 style="text-align: center">Create Post</h1>
        <div style="width: 60%; margin: 25px auto; max-width: 500px">
            <form action="/en/contents" method="POST">
                <label for="contentName">Title</label>
                <div id="contentName" class="form-group">
                    <input class="form-control" type="text" name="name" maxlength="50" placeholder="Title" required>
                </div>
                <label for="contentImage">Image URL</label>
                <div id="contentImage" class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                <label for="contentVideo">Video URL <img id="nav-icons" width="25" height="23" src="/icons/youtube.png"><img id="nav-icons" width="25" height="23" src="/icons/icons8-twitch-48.png"></label>
                <div id="contentVideo" class="form-group">
                    <input class="form-control" type="text" name="video" placeholder="YouTube or Twitch Video URL">
                </div>

                <div class="form-group">
                    <label for="ctg">Select Category of Content</label>
                    <select class="form-control" id="ctg" name="category">
                        <optgroup label="Catergory of your video">
                            <option value="educational">Educational</option>
                            <option value="fitness">Fitness</option>
                            <option value="motivational">Motivational</option>
                            <option value="music">Music</option>
                            <option value="beauty">Beauty</option>
                            <option value="gaming">Gaming</option>
                            <option value="vlog">VLOG</option>
                            <option value="animal">Animal</option>
                            <option value="others">Others</option>
                        </optgroup>
                    </select>                   

                </div>
                        
                <div class="form-group">
                    <textarea id="editor" type="text" name="description"></textarea>
                </div>

                <script>
                  CKEDITOR.replace( 'editor');
                </script>
                    
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <div class="text-right">
                <a class="btn btn-default btn-sm" id="btn-default" href="/en/contents">Go Back</a>
            </div>
        </div>
    </div>
<% include ../partials/footer %>